@{
    ViewData["Title"] = "Home Page";
}

@model List<Bowler>

<h1>Bowlers</h1>
<h2>@ViewBag.SelectedTeam</h2>
<br />
<table>
    <tr>
        <td>Name</td>
        <td>Address</td>
        <td>City</td>
        <td>State</td>
        <td>Zip</td>
        <td>Phone Number</td>
        <td>Team</td>
    </tr>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</td>
            <td>@b.BowlerAddress</td>
            <td>@b.BowlerCity</td>
            <td>@b.BowlerState</td>
            <td>@b.BowlerZip</td>
            <td>@b.BowlerPhoneNumber</td>
            <td>@b.Team.TeamName</td>
            <td><a class="btn btn-primary" asp-for="Home" asp-action="Edit" asp-route-bowlerId="@b.BowlerID">Edit</a></td>
            <td><a class="btn btn-primary" asp-for="Home" asp-action="Delete" asp-route-bowlerId="@b.BowlerID">Delete</a></td>
        </tr>
    }
</table>

