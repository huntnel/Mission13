@{
}
@model Mission13.Models.Bowler
<div class="container">
    <form method="post">

        <label asp-for="BowlerFirstName">Bowler First Name:</label>
        <input asp-for="BowlerFirstName" /><br />

        <label asp-for="BowlerMiddleInit">Bowler Middle Initial:</label>
        <input asp-for="BowlerMiddleInit" /><br />

        <label asp-for="BowlerLastName">Bowler Last Name:</label>
        <input asp-for="BowlerLastName" /><br />

        <label asp-for="BowlerAddress">Bowler Address:</label>
        <input asp-for="BowlerAddress" /><br />

        <label asp-for="BowlerCity">Bowler City:</label>
        <input asp-for="BowlerCity" /><br />

        <label asp-for="BowlerState">Bowler State:</label>
        <input asp-for="BowlerState" /><br />

        <label asp-for="BowlerZip">Bowler Zip:</label>
        <input asp-for="BowlerZip" /><br />

        <label asp-for="BowlerPhoneNumber">Bowler Phone Number:</label>
        <input asp-for="BowlerPhoneNumber" /><br />

        <select asp-for="TeamID">
            <option value="1">Marlins</option>
            <option value="2">Sharks</option>
            <option value="3">Terrapins</option>
            <option value="4">Barracudas</option>
            <option value="5">Dolphins</option>
            <option value="6">Orcas</option>
            <option value="7">Manatees</option>
            <option value="8">Swordfish</option>
            <option value="9">Huckleberrys</option>
            <option value="10">MintJuleps</option>
        </select><br />

        <button asp-action="Edit" type="submit">Save</button>
    </form>
</div>